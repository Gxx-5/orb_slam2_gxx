{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "prerun",
            "type": "shell",
            "command": "source ${workspaceFolder}/Examples/ROS/ORB_SLAM2/build/devel/setup.zsh"
            // "command": "source ./devel/setup.zsh && rosparam load ${workspaceFolder}/src/orb_slam_2_ros/ros/config/param.yaml"
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cd ${workspaceFolder}/Examples/ROS/ORB_SLAM2/build && make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "catkin clean",
            "type": "shell",
            "command": "catkin",
            "args": [
                "clean",
                "-y"
            ],
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "ccb",
            "dependsOrder": "sequence",
            "dependsOn": [
                "catkin clean",
                "catkin build"
            ],
            "problemMatcher": [
                "$msCompile"
            ]
        }
    ]
}